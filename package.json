{
    "name": "solfegejs-server",
    "description": "Server bundle of SolfegeJS",
    "version": "3.0.0",
    "author": "neolao <contact@neolao.com>",
    "repository": "https://github.com/neolao/solfege-bundle-server.git",
    "license": "MIT",
    "main": "lib/Bundle.js",
    "engines": {
        "node": ">= 9"
    },
    "files": [
        "lib",
        "src",
        "interface.js"
    ],
    "dependencies": {
        "accepts": "1.3.*",
        "formidable": "1.0.*",
        "raw-body": "^2.1.*",
        "is-es7-async": "^1.0.0"
    },
    "devDependencies": {
        "babel-cli": "^6.7",
        "babel-preset-solfege": "^1.1.2",
        "eslint": "^3.19",
        "eslint-plugin-solfege": "^1.0",
        "flow-bin": "^0.60.1",
        "solfegejs-application": "^3.1.1",
        "solfegejs-cli": "^4.0.0",
        "solfegejs-dependency-injection": "^2.2.5",
        "watch": "^1.0.2"
    },
    "scripts": {
        "flow-stop": "flow stop",
        "flow-start": "flow start",
        "flow-restart": "flow stop && flow start",
        "lint": "eslint --ext .js src",
        "prepare": "npm run build",
        "prebuild": "npm run lint && npm run flow-restart && flow",
        "build": "babel --out-dir lib src --copy-files",
        "watch": "watch 'echo \"----------\"; npm run build --silent; npm run example-build --silent' ./src ./example/src",
        "example-build": "flow; babel --out-dir example/lib example/src --copy-files",
        "example-console": "node example/lib/console.js",
        "example-start": "node example/lib/console.js example:start"
    },
    "babel": {
        "presets": [
            "solfege"
        ],
        "comments": false
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:solfege/recommended"
        ]
    }
}
